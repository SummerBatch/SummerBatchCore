<job id="JobFileCompare" xmlns="http://www.summerbatch.com/xmlns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.summerbatch.com/xmlns http://www.summerbatch.com/xmlns/SummerBatchXML_1_0.xsd">
  <step id="CompareSameFile">
    <batchlet ref="JobFileCompare/CompareSameFile"/>
    <next on="FAILED" to="BatchError"/>
    <next on="*" to="CompareSameFiles"/>
  </step>
  <step id="CompareSameFiles">
    <batchlet ref="JobFileCompare/CompareSameFiles"/>
    <next on="FAILED" to="BatchError"/>
    <next on="*" to="CompareDifferentFiles"/>
  </step>
  <step id="CompareDifferentFiles">
    <batchlet ref="JobFileCompare/CompareDifferentFiles"/>
    <next on="FILESNOTEQUAL" to="EndBatch"/>
    <next on="*" to="BatchError"/>
  </step>
  <step id="BatchError">
    <batchlet ref="JobFileCompare/BatchError"/>
    <end on="*"/>
  </step>
  <step id="EndBatch">
    <batchlet ref="JobFileCompare/EndBatch"/>
    <end on="*"/>
  </step>
</job>
